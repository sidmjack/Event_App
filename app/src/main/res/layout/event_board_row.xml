<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2.5dp"
    android:gravity="center_vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/event_board_row">

        <TextView
            android:text="Event Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:id="@+id/event_title"
            android:layout_weight="1" />

        <TextView
            android:text="Event Date &amp; Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:id="@+id/event_time"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:text="Event In: (Time Until)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:id="@+id/event_time_notification"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_weight="1">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/attend_button"
            android:background="@drawable/star_button_effect"/>

    </LinearLayout>

</LinearLayout>

